@model D_A_L.Model.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="//cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="section"></div>
            <main>
                <center>
                    <div class="container">
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                        { 
                        <div class="z-depth-3 y-depth-3 x-depth-3 grey green-text lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px; margin-top: 100px; solid #EEE;">
                            <div class="section"></div>
                            <div class="section"></div>

                            <div class="section"><i class="mdi-alert-error red-text"></i></div>


                            <div class='row'>
                                <div class='input-field col s12'>
                                   @Html.TextBoxFor(x => x.Username)
                                    <label for='email'>Kullanıcı Adı</label>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='input-field col m12'>
                                    @Html.TextBoxFor(x => x.Password)
                                    <label for='password'>Şifre</label>
                                </div>
                                
                            </div>
                            <br />
                            <center>
                                <div class='row'>
                                    <button style="margin-left:65px;" type='submit' name='btn_login' class='col  s6 btn btn-small white black-text  waves-effect z-depth-1 y-depth-1'>Giriş Yap</button>
                                </div>
                            </center>

                        </div>
                        }
                    </div>
                </center>
            </main>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>

        </div>
    </div>
</body>
</html>
<style>
    body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    main {
        flex: 1 0 auto;
    }

    body {
        background: #fff;
    }

</style>